#:kivy 2.2.0

<JoinRoomParticipantUI>:
    orientation: "vertical"
    opacity: 0 # hide
    Image:
        id: pfp
        source: "assets/pfp.png"
        fit_mode: "scale-down"
    Label:
        id: nickname

<JoinRoomScreen>:
    # canvas:
    #     Rectangle:
    #         id: background
    #         source: 'assets/background-blur.jpg'
    #         pos: self.pos
    #         size: self.size
    RelativeLayout:
        Label:
            id: titleLabel
            text: "Connecting to server"
            font_size:"20sp"
            pos_hint: {'center_x': 0.5, 'y': 0.85}
            size_hint: 1, None
        WrapLabel:
            id: bodyLabel
            font_size:"14sp"
            text: "Please wait..."
            pos_hint: {'center_x': 0.5, 'y': 0.7}
            size_hint: 1, None
        BoxLayout:
            pos_hint: {'x': 0.07, 'y': 0.07}
            size_hint: None,0.17
            orientation: "vertical"
            halign: "center"
            Image: # Fake button
                id: timerImage
                source: "assets/clock.png"
                fit_mode: "scale-down"
                ratio: 1
            Label:
                id: timer
                text: ""
                font_size:"20sp"
        BoxLayout:
            id: joinRoomParticipantUIs
            spacing: 35 # space between children
            pos_hint: {'center_x': 0.5, 'y': 0.2}
            size_hint: 0.8, 0.3
        WrapLabel:
            id: tipLabel
            text: ""
            pos_hint: {'center_x': 0.5, 'y': 0.07}
            size_hint: 0.7,None
            font_size: "12sp"
        Button:
            pos_hint: {'x': 0.87, 'y': 0.05}
            size_hint: 0.1, None
            id: exitButton
            text: "Exit"
            background_color: 1, 0, 0, 1
            halign: 'center'
            on_press: root.exitGame()
        ImageButton:
            background_normal: "assets/question-mark.png"
            background_down: "assets/question-mark.png"
            pos_hint: {'right': 0.96, 'top': 0.93}
            size_hint: None,0.05
            ratio: 1
            on_press: root.showRules()
