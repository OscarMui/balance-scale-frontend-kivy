#:kivy 2.2.0

<HomeScreen>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1 
        Rectangle:
            id: background
            source: 'assets/background-blur.jpg'
            pos: (self.width-self.height*16/9)/2,0 # bottom left corner 
            size: self.height*16/9, self.height
    canvas.before:
        Color:
            rgba: 0.21875, 0.1875, 0.15625, 1  # Set the desired background color (RGB)
        Rectangle:
            pos: 0, 0
            size: (self.width-self.height*16/9)/2, self.height
        Rectangle:
            pos: (self.width+self.height*16/9)/2, 0
            size: (self.width-self.height*16/9)/2, self.height
    RelativeLayout:
        Label:
            text: "[ GAME ]"
            font_size:"20sp"
            pos_hint: {'center_x': 0.5, 'y': 0.85}
            size_hint: 1, None

        Label:
            text: "Tenbin"
            font: "Noto Sans"
            font_size: "35sp"
            pos_hint: {'center_x': 0.5, 'y': 0.7}
            size_hint: 1, None
        TextInput:
            id: nickname
            hint_text:"Enter your name"
            font_name: "Noto Sans"
            font_size:"20sp"
            halign: 'center'
            valign: 'middle'
            multiline: False
            background_color: 0.6, 0.6, 0.6, 0.5
            foreground_color: "white"
            hint_text_color: "#AAAAAA"
            pos_hint: {'center_x': 0.5, 'y': 0.25}
            size_hint: 0.4, 0.125
        BoxLayout:
            pos_hint: {'center_x': 0.5, 'y': 0.05}
            size_hint: 0.4, 0.15
            spacing: 10
            Button:
                id: onlineButton
                text: "Connecting..."
                font_size:"20sp"
                background_color: 0, 0.7, 0, 1
                halign: 'center'
                text_size: self.width, None
                on_press: root.modeSelection("online")
                disabled: True
            Button:
                text: "Play Solo"
                font_size:"20sp"
                background_color: 0.7, 0, 0, 1
                halign: 'center'
                text_size: self.width, None
                on_press: root.modeSelection("solo")
        ImageButton:
            background_normal: "assets/question-mark-big.png"
            background_down: "assets/question-mark-big.png"
            pos_hint: {'right': 0.96, 'top': 0.93}
            size_hint: None,0.13
            ratio: 2
            on_press: root.showRules()
        ImageButton:
            background_normal: "assets/discord.png"
            background_down: "assets/discord.png"
            pos_hint: {'right': 0.96, 'top': 0.78}
            size_hint: None,0.13
            ratio: 2
            on_press: root.openDiscord()
        BoxLayout:
            id: announcementsLayout
            orientation: "vertical"
            size_hint: 0.08, 0.8
            pos_hint: {'x': 0.02, 'top': 0.93}
            spacing: 40
            Label: # dummy label at the back to top align the announcements
                size_hint: None,1
