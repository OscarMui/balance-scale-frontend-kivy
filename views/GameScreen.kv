#:kivy 2.2.0

<DigitButton>:
    text: str(self.digit)
    font_size:"26sp"
    # border: 0,0,0,0
    background_color: "#000000"
    background_normal: "" # The default texture is grey, so just setting the background color will give a darker result. To set a plain color, set the background_normal to ''.
    background_down: ""
    always_release: True
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Line:
            width: 5
            rectangle: self.x, self.y, self.width, self.height

<GameScreen>:
    RelativeLayout:
        BoxLayout:
            pos_hint: {'x': 0.05, 'y': 0.7}
            size_hint: 0.3,0.2
            # wrapper for guess label for it to position correctly initially
            GuessLabel:
                # background_color set in code for consistency
                font_size: "35sp"
                id: guessLabel
                text: ""
        ScrollView:
            pos_hint: {'x': 0.05, 'y': 0.1}
            size_hint: 0.3,0.5
            do_scroll_x: False
            BoxLayout:
                id: infoLayout
                orientation: "vertical"
                size_hint: 1, None
                size: 0,0
                spacing: 10
        ImageButton:
            opacity: 0
            id: quitGameButton
            background_normal: "assets/cross.png"
            background_down: "assets/cross.png"
            pos_hint: {'x': 0.03, 'y': 0.93}
            size_hint: None,0.05
            ratio: 1
            on_press: root.quitGame()
        GridLayout:
            id: numpad
            cols: 3
            pos_hint: {'x': 0.42, 'y': 0.1}
            size_hint: 0.32,0.8
            Button:
                id: cancelButton
                text: "AC"
                font_size:"26sp"
                # border: 0,0,0,0
                background_color: 89.0/255,0,0,1
                background_normal: "" # The default texture is grey, so just setting the background color will give a darker result. To set a plain color, set the background_normal to ''.
                background_down: ""
                always_release: True
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Line:
                        width: 5
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.cancelPressed()
                on_release: root.cancelReleased()
            Button:
                id: backspaceButton
                text: "C"
                font_size:"26sp"
                # border: 0,0,0,0
                background_color: 89.0/255,0,0,1
                background_normal: "" # The default texture is grey, so just setting the background color will give a darker result. To set a plain color, set the background_normal to ''.
                background_down: ""
                always_release: True
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Line:
                        width: 5
                        rectangle: self.x, self.y, self.width, self.height
                on_press: root.backspacePressed()
                on_release: root.backspaceReleased()
            # DigitButtons will be rendered in code
            # DigitButton:
            #     digit: 0
            # DigitButton:
            #     digit: 1
            # DigitButton:
            #     digit: 2
            # DigitButton:
            #     digit: 3
            # DigitButton:
            #     digit: 4
            # DigitButton:
            #     digit: 5
            # DigitButton:
            #     digit: 6
            # DigitButton:
            #     digit: 7
            # DigitButton:
            #     digit: 8
            # DigitButton:
            #     digit: 9
        ImageButton:
            background_normal: "assets/question-mark-big.png"
            background_down: "assets/question-mark-big.png"
            pos_hint: {'right': 0.96, 'y': 0.755}
            size_hint: None,0.15
            ratio: 2
            on_press: root.showRules()
        ImageButton:
            id: rewindButton
            background_normal: "assets/rewind-big.png"
            background_down: "assets/rewind-big.png"
            pos_hint: {'right': 0.96,'y': 0.55}
            size_hint: None,0.15
            ratio: 2
            on_press: root.showRewind()
        BoxLayout:
            pos_hint: {'right': 0.93,'y': 0.3}
            size_hint: None,0.19
            orientation: "vertical"
            halign: "center"
            Image: # Fake button
                source: "assets/clock.png"
                fit_mode: "scale-down"
                ratio: 1
            Label:
                id: timer
                text: "2m00s"
                font_size:"20sp"

        # ImageButton: # Fake button
        #     background_normal: "assets/clock-2.png"
        #     background_down: "assets/clock-2.png"
        #     pos_hint: {'right': 0.96, 'y': 0.37}
        #     size_hint: None,0.13
        #     ratio: 2
        # Label:
        #     pos_hint: {'right': 0.96, 'y': 0.27}
        #     size_hint: 0.28,0.13
        #     id: timer
        #     text: "2m00s"
        #     font_size:"20sp"
        ImageButton:
            background_normal: "assets/confirm-big.png"
            background_down: "assets/confirm-big-down.png"
            border: 0,0,0,0
            pos_hint: {'right': 0.96, 'y': 0.095}
            size_hint: None,0.15
            ratio: 2
            on_press: root.confirmPressed()