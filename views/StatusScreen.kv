#:kivy 2.2.0

<ParticipantUI>:
    orientation: "vertical"
    spacing: 10
    Label:
        id: win
        opacity: 0 # hide
        font_size: "20sp"
        size_hint: (1,.19)
    Image:
        id: pfp
        size_hint: (1,.5)
        source: "assets/pfp.png"
        fit_mode: "scale-down"
    Label:
        id: nickname
        size_hint: (1,.12)
    Label:
        id: info
        font_size: "20sp"
        size_hint: (1,.19)
<StatusScreen>:
    # canvas:
    #     Rectangle:
    #         id: background
    #         source: 'assets/background-blur.jpg'
    #         pos: self.pos
    #         size: self.size
    RelativeLayout:
        Label:
            id: titleLabel
            text: "[ROUND OVER]"
            font_size:"20sp"
            pos_hint: {'center_x': 0.5, 'y': 0.85}
            size_hint: 1, None
        BoxLayout:
            id: participantUIs
            spacing: 35 # space between children
            pos_hint: {'center_x': 0.5, 'y': 0.4}
            size_hint: 0.8, 0.43
            
        Label:
            id: calculationLabel
            font_size:"14sp"
            text: ""
            pos_hint: {'center_x': 0.5, 'y': 0.2}
            size_hint: 1, None
        WrapLabel:
            id: infoLabel
            font_size:"14sp"
            text: ""
            pos_hint: {'center_x': 0.5, 'y': 0.1}
            size_hint: 1, None
        Button:
            pos_hint: {'x': 0.87, 'y': 0.05}
            size_hint: 0.1, None
            id: exitButton
            text: "Exit"
            opacity: 0 # hide
            background_color: 0, 1, 0
            halign: 'center'
            on_press: root.exitGame()
        ImageButton:
            background_normal: "assets/question-mark.png"
            background_down: "assets/question-mark.png"
            pos_hint: {'x': 0.93, 'y': 0.93}
            size_hint: 0.05/16*9,0.05
            on_press: root.showRules()
