#:kivy 1.0.9
<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: nickname
            hint_text:"Enter your name"
            pos_hint: {"center_x": 0.5, "center_y": 0.705}
            size_hint: 0.95, 0.5
            multiline: False
            background_color: "#666666"
            foreground_color: "white"
            hint_text_color: "#AAAAAA"
            # on_text: app.process()
        BoxLayout:
            Button:
                text: "Play Online"
                on_press: root.modeSelection("online")
            Button:
                text: "Play Solo"
                on_press: root.modeSelection("solo")
            Button:
                text: "Goto settings"
                on_press: root.manager.current = "settings"

<JoinRoomScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: titleLabel
            text: "Connecting to server"
        Label:
            id: bodyLabel
            text: "Please wait..."
        BoxLayout:
            Label:
                text: "1"
            Label:
                text: "2"
            Label:
                text: "3"
            Label:
                text: "4"
            Label:
                text: "5"
<SettingsScreen>:
    BoxLayout:
        Button:
            text: "My settings button"
        Button:
            text: "Back to home"
            on_press: root.manager.current = "home"

