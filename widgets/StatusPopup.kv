#:kivy 2.2.0

<StatusPopupParticipantUI>:
    orientation: "vertical"
    spacing: 10
    Label:
        id: win
        opacity: 0 # hide
        font_size: "18sp"
        size_hint: (1,.19)
    Image:
        id: pfp
        size_hint: (1,.4)
        source: "assets/pfp.png"
        fit_mode: "scale-down"
    Label:
        id: nickname
        size_hint: (1,.13)
    Label:
        id: guessLabel
        font_size: "18sp"
        size_hint: (1,.19)
    Label:
        id: scoreLabel
        font_size: "18sp"
        size_hint: (1,.19)

<StatusPopup>:
    title: 'Previous Round'
    size_hint: 0.7,1
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            id: participantUIs
            spacing: 35 # space between children
            size_hint: 1,0.7
        BoxLayout:
            id: statusLayout
            orientation: "vertical"
            size_hint: 1,0.3
            Label:
                id: calculationLabel
                font_size:"14sp"
                text: ""