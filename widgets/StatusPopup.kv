#:kivy 2.2.0

<StatusPopupParticipantUI>:
    orientation: "vertical"
    spacing: 10
    Label:
        id: win
        opacity: 0 # hide
        font_size: "20sp"
        size_hint: (1,.19)
    Image:
        id: pfp
        size_hint: (1,.4)
        source: "assets/pfp.jpg"
        fit_mode: "scale-down"
    Label:
        id: nickname
        size_hint: (1,.13)
    Label:
        id: guessLabel
        font_size: "20sp"
        size_hint: (1,.19)
    Label:
        id: scoreLabel
        font_size: "20sp"
        size_hint: (1,.19)

<StatusPopup>:
    title: 'Previous Round'
    size_hint: 0.8,1
    BoxLayout:
        id: statusLayout
        orientation: "vertical"
        BoxLayout:
            id: participantUIs
            spacing: 35 # space between children
            pos_hint_x: {'center_x': 0.5}
            size_hint: 1,1
        Label:
            id: calculationLabel
            font_size:"14sp"
            text: ""
            size_hint: 1, None
