#:kivy 2.2.0

<NewRulesPopup>:
    auto_dismiss: False
    title: 'Someone died!'
    title_color: 1,0,0,1
    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        WrapLabel:
            text: "New rules are being added."
        WrapLabel:
            id: rule4
            opacity: 0
            text: "1. If two or more players choose the same number, the number is invalid and all players who selected the number will lose a point."
        WrapLabel:
            id: rule3
            opacity: 0
            text: "2. If a player chooses the exact correct number, they win the round and all other players lose two points."
        WrapLabel:
            id: rule2
            opacity: 0
            text: "3. If someone chooses 0, a player who chooses 100 automatically wins the round."
        # WrapLabel:
        #     text: "You can always review these rules under the game info tab."