#:kivy 2.2.0

<NewRulesPopup>:
    auto_dismiss: False
    title: 'Someone died!'
    title_color: 1,0,0,1
    size_hint: 1,1
    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        WrapLabel:
            text: "New rules are being added."
            size_hint: 1,0.15
        WrapLabel:
            id: rule4
            opacity: 0
            text: "1. If two or more players choose the same number, the number is invalid and all players who selected the number will lose a point."
            size_hint: 1,0.15
        WrapLabel:
            id: rule3
            opacity: 0
            text: "2. If a player chooses the exact correct number, they win the round and all other players lose two points."
            size_hint: 1,0.15
        WrapLabel:
            id: rule2
            opacity: 0
            text: "3. If someone chooses 0, a player who chooses 100 wins the round."
            size_hint: 1,0.15
        WrapLabel:
            id: hintText
            size_hint: 1, 0.25
            text: "You can always review these rules by clicking the (?) button on the top-right corner."
        BoxLayout:
            size_hint: 1, 0.15
            orientation: 'horizontal'
            Label: # phantom labels to center align the button
                opacity: 0
                size_hint: 0.3, 1
            Button:
                id: closeButton
                opacity: 0
                text: "Close (Clock is ticking!)"
                font_size:"16sp"
                background_color: 0, 0.7, 0, 1
                halign: 'center'
                size_hint: 0.4, 1
                on_press: root.dismiss()
            Label:
                opacity: 0
                size_hint: 0.3, 1